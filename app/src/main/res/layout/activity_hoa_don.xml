<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".Activity.HoaDonActivity">
    <androidx.appcompat.widget.Toolbar
        android:id="@+id/toolbarHD"
        android:layout_width="match_parent"
        android:layout_height="70dp"
        android:background="#00ABFD"
        android:elevation="5dp"
        android:popupTheme="@style/ThemeOverlay.AppCompat.Light"
        android:theme="@style/ThemeOverlay.AppCompat.Dark.ActionBar" />
    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="CÃ³ ..."
        android:textSize="17dp"
        android:textAlignment="textEnd"

        android:layout_marginTop="75dp"
        android:id="@+id/tv_tongHoaDon"/>
    <androidx.recyclerview.widget.RecyclerView
        android:layout_width="match_parent"
        android:layout_height="550dp"
        android:layout_marginTop="100dp"
        android:layout_gravity="center"
        android:id="@+id/rcv_HoaDon"/>
    <FrameLayout
        android:id="@+id/frameLayouthoadon"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />

    <androidx.cardview.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_marginHorizontal="8dp"
        android:layout_marginBottom="8dp"
        android:elevation="5dp"
        android:translationZ="10dp"
        app:cardCornerRadius="20dp">

        <com.google.android.material.bottomnavigation.BottomNavigationView
            android:id="@+id/bottom_nav1"
            android:layout_width="match_parent"
            android:layout_height="70dp"
            android:background="#fff"
            app:itemIconTint="#2196F3"
            app:itemTextColor="#AAAAAA"
            app:menu="@menu/menu_hoa_don" />
    </androidx.cardview.widget.CardView>
</RelativeLayout>