<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".Activity.HoaDonActivity">
    <androidx.appcompat.widget.Toolbar
        android:id="@+id/toolbarLS"
        android:layout_width="match_parent"
        android:layout_height="70dp"
        android:background="#00ABFD"
        android:elevation="5dp"
        android:popupTheme="@style/ThemeOverlay.AppCompat.Light"
        android:theme="@style/ThemeOverlay.AppCompat.Dark.ActionBar" />
    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Tổng Cộng  ..."
        android:textSize="17dp"
        android:textAlignment="textStart"
        android:layout_marginTop="75dp"
        android:id="@+id/tv_tonglichsu"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="120dp"
android:layout_marginTop="100dp"

        android:orientation="vertical">

    <TextView
        android:layout_gravity="left"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Từ:"
        android:textColor="#000"
        android:textStyle="bold"
        android:textSize="15dp"
        android:layout_marginLeft="20dp"
        />
    <TextView
        android:layout_marginTop="5dp"
        android:id="@+id/txttungay"
        android:layout_width="300dp"
        android:layout_height="30dp"
        android:hint=""
        android:textStyle="bold"
        android:textColor="#000"
        android:padding="5sp"
        android:layout_gravity="center"
        android:background="@drawable/solid"
        />
    <TextView
        android:layout_gravity="left"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Đến:"
        android:textColor="#000"
        android:textStyle="bold"
        android:textSize="15dp"
        android:layout_marginLeft="20dp"

        />
        <TextView
            android:layout_marginTop="5dp"
            android:id="@+id/txtdenngay"
            android:layout_width="300dp"
            android:layout_height="30dp"
            android:hint=""
            android:textStyle="bold"
            android:padding="5sp"
            android:layout_gravity="center"
            android:textColor="#000"
            android:background="@drawable/solid"
            />
    </LinearLayout>
    <androidx.recyclerview.widget.RecyclerView
        android:layout_width="match_parent"
        android:layout_height="550dp"
        android:layout_marginTop="220dp"
        android:layout_gravity="center"
        android:id="@+id/rcv_LichSu"/>
    <FrameLayout
        android:id="@+id/frameLayoutlichsu"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />

    <androidx.cardview.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_marginHorizontal="8dp"
        android:layout_marginBottom="8dp"
        android:elevation="5dp"
        android:translationZ="10dp"
        app:cardCornerRadius="20dp">

        <com.google.android.material.bottomnavigation.BottomNavigationView
            android:id="@+id/bottom_navlichsu"
            android:layout_width="match_parent"
            android:layout_height="70dp"
            android:background="#fff"
            app:itemIconTint="#2196F3"
            app:itemTextColor="#AAAAAA"
            app:menu="@menu/bottom_navigation" />
    </androidx.cardview.widget.CardView>
</RelativeLayout>