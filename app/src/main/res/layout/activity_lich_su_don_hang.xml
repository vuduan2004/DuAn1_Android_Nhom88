        <EditText
            android:id="@+id/edTuNgay"
            android:layout_width="300dp"
            android:layout_height="30dp"
            android:layout_gravity="center"
            android:layout_marginTop="5dp"
            android:background="@drawable/solid"
            android:editable="false"
            android:hint=""
            android:padding="5sp"
            android:textColor="#000"
            android:textStyle="bold" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="left"
            android:layout_marginLeft="20dp"
            android:text="Đến:"
            android:textColor="#000"
            android:textSize="15dp"
            android:textStyle="bold"

            />
<!--        <Button-->
<!--            android:layout_width="wrap_content"-->
<!--            android:layout_height="wrap_content"-->
<!--            android:id="@+id/btnDenNgay"-->
<!--            android:text="đến ngày"/>-->
        <EditText
            android:id="@+id/edDenNgay"
            android:layout_width="300dp"
            android:layout_height="30dp"
            android:layout_gravity="center"
            android:layout_marginTop="5dp"
            android:background="@drawable/solid"
            android:editable="false"
            android:hint=""
            android:padding="5sp"
            android:textColor="#000"
            android:textStyle="bold" />

        <Button
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Xem lịch sử"
            android:layout_gravity="center"
            android:layout_marginTop="10dp"
            android:id="@+id/btnXemLS"
            android:backgroundTint="#00ABFD"/>

    </LinearLayout>

    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/rcv_LichSu"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_gravity="center"
        android:layout_marginTop="10dp"/>

    <FrameLayout
        android:id="@+id/frameLayoutlichsu"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />

