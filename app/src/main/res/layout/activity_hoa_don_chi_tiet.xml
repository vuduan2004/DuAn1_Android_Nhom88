<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".Activity.HoaDonChiTietActivity">

    <androidx.appcompat.widget.Toolbar
        android:id="@+id/toolbarCTHD"
        android:layout_width="match_parent"
        android:layout_height="70dp"
        android:background="#00ABFD"
        android:elevation="5dp"
        android:popupTheme="@style/ThemeOverlay.AppCompat.Light"
        android:theme="@style/ThemeOverlay.AppCompat.Dark.ActionBar" />

    <LinearLayout
        android:layout_width="match_parent"
        android:padding="10dp"
        android:layout_height="wrap_content"
        android:orientation="vertical">
        <TextView
            android:id="@+id/tv_mahoadon"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Mã hoá đơn"
            android:textSize="17dp" />

<!--        <TextView-->
<!--            android:id="@+id/tv_tongSL"-->
<!--            android:layout_width="wrap_content"-->
<!--            android:layout_height="wrap_content"-->
<!--            android:text="Tổng số lượng"-->
<!--            android:textSize="17dp" />-->

        <TextView
            android:id="@+id/tv_tongTienCT"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Tổng tiền"
            android:textColor="@color/red"
            android:textSize="17dp" />

        <TextView
            android:id="@+id/tv_ngayCT"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Ngày"
            android:textAlignment="textEnd"
            android:textSize="17dp" />
    </LinearLayout>
    <View
        android:layout_width="match_parent"
        android:layout_height="2dp"
        android:background="@color/black"/>
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="20dp"
        android:textStyle="bold"
        android:text="Sản phẩm"
        android:padding="10dp"/>
    <androidx.cardview.widget.CardView
        android:id="@+id/view_loaisp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="8dp"
        android:layout_marginTop="110dp"
        app:cardCornerRadius="8dp">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">
            <ImageView
                android:layout_width="120dp"
                android:layout_height="120dp"
                android:id="@+id/img_hoadonCT"/>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="vertical">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:id="@+id/tv_tenHoaDonCT"
                    android:layout_marginBottom="10dp"
                    android:textSize="20dp"/>
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:id="@+id/tv_tienHoaDonCT"
                    android:textStyle="bold"
                    android:layout_marginBottom="10dp"
                    android:textColor="@color/red"
                    android:textSize="20dp"/>
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:id="@+id/tv_soLuongCT"
                    android:textSize="17dp"/>
            </LinearLayout>
        </LinearLayout>

    </androidx.cardview.widget.CardView>
</LinearLayout>